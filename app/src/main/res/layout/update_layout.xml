<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".70"
                android:ems="10"
                android:textColor="@color/updateItemTextcolor"
                android:id="@+id/medicineName"
                android:textSize="30sp"
                android:text="Medicine Name"
                android:gravity="center_vertical"
                android:textAllCaps="true"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:textSize="22sp"
                android:textColor="@color/updateItemTextcolor"
                android:text="Stock"
                android:gravity="center"
                android:id="@+id/stock"
                android:layout_weight=".30"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.14">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight=".70"
                android:textSize="20sp"
                android:textColor="@color/updateItemTextcolor"
                android:text="Dose Per Day  : "
                android:id="@+id/dosePerDay" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:hint="values"
                android:textColor="@color/updateItemTextcolor"
                android:id="@+id/dosePerDayValues"
                android:layout_weight=".30"/>


        </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Pills Per Dose : "
            android:layout_weight=".70"
            android:textSize="20sp"

            android:textColor="@color/updateItemTextcolor"
            android:id="@+id/pillPerDose" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="values"
            android:textColor="@color/updateItemTextcolor"

            android:gravity="center"
            android:id="@+id/pillPerDoseValues"
            android:layout_weight=".30"/>

    </LinearLayout>


</LinearLayout>
